---
import Layout from "@layouts/Layout.astro";

const metadata = {
  title: "404 Error",
  description: "Sorry, it doesn't exist.",
};
---

<Layout {...metadata}>
  <div class="flex flex-col items-center justify-center mt-9">
    <div class="max-w-md md:max-w-2xl text-center p-4">
      <h1 class="my-8 text-5xl font-semibold">{metadata.title}</h1>
      <h2 class="text-2xl dark:text-zinc-300 mb-5">{metadata.description}</h2>
    </div>
  </div>
</Layout>
